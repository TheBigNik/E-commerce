generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  cartItems Cart[]
  role      Role     @default(COSTUMER)
  createdAt DateTime @default(now())
}

enum Role {
  COSTUMER
  ADMIN
}

model Cart {
  id       Int       @id @default(autoincrement())
  quantity Int
  product  Product[]
  user     User?     @relation(fields: [userId], references: [id])
  userId   Int?
}

model Product {
  id          Int        @id @default(autoincrement())
  name        String
  description String
  price       Float      @default(0.00)
  image       String
  category    Category[]
  isFeatured  Boolean    @default(false)
  cart        Cart?      @relation(fields: [cartId], references: [id])
  cartId      Int?
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String
  products Product[]
}
